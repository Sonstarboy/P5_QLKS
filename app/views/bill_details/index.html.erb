<p id="notice"><%= notice %></p>

<h1>Bill Details</h1>

<table class="table">
  <thead>
    <tr>
      <th>Bill</th>
      <th>Service</th>
      <th>Unit price</th>
      <th>Amount</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_details.each do |bill_detail| %>
      <tr>
        <td><%= bill_detail.bill %></td>
        <td><%= bill_detail.service %></td>
        <td><%= bill_detail.unit_price %></td>
        <td><%= bill_detail.amount %></td>
        <td><%= bill_detail.total %></td>
        <td><%= link_to 'Show', bill_detail %></td>
        <td><%= link_to 'Edit', edit_bill_detail_path(bill_detail) %></td>
        <td><%= link_to 'Destroy', bill_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

