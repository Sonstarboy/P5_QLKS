<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :code %>

    <%= f.input :price %>

    <%= f.input :status %>

    <%= f.association :room %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
