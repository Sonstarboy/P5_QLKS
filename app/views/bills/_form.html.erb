<%= simple_form_for(@bill) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.association :agreement %>

    <%= f.input :code %>

    <%= f.input :bill_date %>

    <%= f.input :other_cost %>

    <%= f.input :total_amount %>

    <%= f.input :description %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
