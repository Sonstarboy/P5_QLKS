<p id="notice"><%= notice %></p>

<h1>Agreements</h1>

<table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Renter</th>
      <th>Employee</th>
      <th>Date contract</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agreements.each do |agreement| %>
      <tr>
        <td><%= agreement.code %></td>
        <td><%= agreement.renter %></td>
        <td><%= agreement.employee %></td>
        <td><%= agreement.date_contract %></td>
        <td><%= agreement.status %></td>
        <td><%= link_to 'Show', agreement %></td>
        <td><%= link_to 'Edit', edit_agreement_path(agreement) %></td>
        <td><%= link_to 'Destroy', agreement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Agreement', new_agreement_path %>
